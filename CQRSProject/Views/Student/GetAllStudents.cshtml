@model List<GetAllStudentQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h2>Student Information</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Student Name</th>
            <th>Student Surname</th>
            <th>Department</th>
            <th>City</th>
            <th>Delete</th>
            <th>Update</th>
            <th>Details</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Department</td>
                <td>@item.City</td>

                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-success">Update</a></td>
                <td><a href="/Student/DetailStudent/@item.StudentID" class="btn btn-outline-dark">Details</a></td>
            </tr>

        }
    </table>
    <br />
    <a href="/Student/AddStudent/" class="btn btn-outline-primary">New Student</a>

</div>



